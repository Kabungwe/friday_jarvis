# =============================================================================
# Dr. Kay - AI Medical Tutor Environment Configuration
# Copy this file to .env and fill in your actual API keys and configuration
# =============================================================================

# LiveKit Configuration
# Get your LiveKit credentials from https://livekit.io/
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Google AI Configuration  
# For Google Realtime API and other Google services
GOOGLE_API_KEY=your_google_api_key
GOOGLE_PROJECT_ID=your_google_project_id

# OpenAI Configuration (optional - for backup LLM)
OPENAI_API_KEY=your_openai_api_key

# Email Configuration (for study reminders and notifications)
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Database Configuration (optional - for user data persistence)
DATABASE_URL=sqlite:///dr_kay.db
# For PostgreSQL: postgresql://username:password@localhost:5432/dr_kay_db

# Medical API Configuration (if integrating with external medical APIs)
MEDICAL_API_BASE=https://api.allstarmedics.com
MEDICAL_API_KEY=your_medical_api_key

# File Storage Configuration
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET=your_jwt_secret_key

# Application Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# CORS Configuration (for production deployment)
ALLOWED_ORIGINS=http://localhost:3000,https://allstarmedics.com,https://www.allstarmedics.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/dr_kay.log

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # 1 hour

# Analytics Configuration (optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_api_key

# Medical Data Sources (optional integrations)
PUBMED_API_KEY=your_pubmed_api_key
RXNORM_API_URL=https://rxnav.nlm.nih.gov/REST
SNOMED_API_URL=https://browser.ihtsdotools.org/snowstorm/snomed-ct

# Notification Services (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Feature Flags
ENABLE_VOICE_ACTIVATION=true
ENABLE_VIDEO_RECORDING=false
ENABLE_SESSION_TRANSCRIPTS=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_RESEARCH_SEARCH=true

# Performance Configuration
MAX_CONCURRENT_SESSIONS=50
SESSION_TIMEOUT=1800  # 30 minutes
CLEANUP_INTERVAL=300  # 5 minutes

# =============================================================================
# Quick Setup Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your LiveKit credentials (required)
# 3. Add your Google API key (required for voice)
# 4. Configure Gmail for notifications (optional)
# 5. Run: python web_server.py to start the application
# =============================================================================